<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_notepad"
        android:layout_width="344dp"
        android:layout_height="675dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notepad" />

    <ImageButton
        android:id="@+id/ib_arrow"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginStart="38dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/ib_x"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toTopOf="@+id/ib_x"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/arrow" />

    <ImageButton
        android:id="@+id/iv_info"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginEnd="15dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/ib_x"
        app:layout_constraintEnd_toStartOf="@+id/ib_x"
        app:layout_constraintTop_toTopOf="@+id/ib_x"
        app:srcCompat="@drawable/info_small" />

    <ImageButton
        android:id="@+id/ib_x"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="32dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintTop_toTopOf="@+id/iv_notepad"
        app:srcCompat="@drawable/x" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="245dp"
        android:layout_height="222dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="460dp"
        android:rotation="7"
        app:layout_constraintBottom_toBottomOf="@+id/iv_notepad"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:srcCompat="@drawable/line_light" />

    <TextView
        android:id="@+id/tv_headline"
        android:layout_width="233dp"
        android:layout_height="99dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/family_headline"
        android:text="auswertungen"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/darkgrey"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toTopOf="@+id/iv_notepad" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="@dimen/bt_large_w"
        android:layout_height="@dimen/bt_large_h"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/lightblue"
        android:elevation="1dp"
        android:fontFamily="@font/family_body"
        android:outlineSpotShadowColor="#00FFFFFF"
        android:paddingHorizontal="30dp"
        android:shadowColor="#00FFFFFF"
        android:text="Moti Übersicht"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/medium"
        app:cornerRadius="50dp"
        app:icon="@drawable/chart_list"
        app:iconSize="30dp"
        app:iconTint="@color/darkgrey"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toBottomOf="@+id/tv_headline" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="@dimen/bt_large_w"
        android:layout_height="@dimen/bt_large_h"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/lightgreen"
        android:elevation="1dp"
        android:fontFamily="@font/family_body"
        android:outlineSpotShadowColor="#00FFFFFF"
        android:paddingHorizontal="30dp"
        android:shadowColor="#00FFFFFF"
        android:text="Meine Übersicht"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/medium"
        app:cornerRadius="40dp"
        app:icon="@drawable/chart_table"
        app:iconSize="30dp"
        app:iconTint="@color/darkgrey"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toBottomOf="@+id/bt1" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="@dimen/bt_large_w"
        android:layout_height="@dimen/bt_large_h"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/lightblue"
        android:elevation="1dp"
        android:fontFamily="@font/family_body"
        android:outlineSpotShadowColor="#00FFFFFF"
        android:paddingHorizontal="30dp"
        android:shadowColor="#00FFFFFF"
        android:text="Woche vs. Woche"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/medium"
        app:cornerRadius="40dp"
        app:icon="@drawable/chart_dots"
        app:iconSize="30dp"
        app:iconTint="@color/darkgrey"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toBottomOf="@+id/bt2" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="@dimen/bt_large_w"
        android:layout_height="@dimen/bt_large_h"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/lightgreen"
        android:elevation="1dp"
        android:fontFamily="@font/family_body"
        android:outlineSpotShadowColor="#00FFFFFF"
        android:paddingHorizontal="30dp"
        android:shadowColor="#00FFFFFF"
        android:text="Wochenverteilung"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/medium"
        app:cornerRadius="40dp"
        app:icon="@drawable/chart_pie"
        app:iconSize="30dp"
        app:iconTint="@color/darkgrey"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toBottomOf="@+id/bt3" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="@dimen/bt_large_w"
        android:layout_height="@dimen/bt_large_h"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/lightblue"
        android:elevation="1dp"
        android:fontFamily="@font/family_body"
        android:outlineSpotShadowColor="#00FFFFFF"
        android:paddingHorizontal="30dp"
        android:shadowColor="#00FFFFFF"
        android:text="Tagesverlauf"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/medium"
        app:cornerRadius="40dp"
        app:icon="@drawable/chart_field"
        app:iconSize="30dp"
        app:iconTint="@color/darkgrey"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toBottomOf="@+id/bt4" />

</androidx.constraintlayout.widget.ConstraintLayout>