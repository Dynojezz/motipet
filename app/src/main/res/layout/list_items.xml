<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_moti_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/family_body"
        android:text="TextView"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/medium"
        app:layout_constraintBottom_toTopOf="@+id/tv_eval_steps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_eval_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/family_body"
        android:text="TextView"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/medium"
        app:layout_constraintBottom_toTopOf="@+id/tv_eval_distance"
        app:layout_constraintEnd_toEndOf="@+id/tv_moti_day"
        app:layout_constraintTop_toBottomOf="@+id/tv_moti_day" />

    <TextView
        android:id="@+id/tv_eval_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/family_body"
        android:text="TextView"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/medium"
        app:layout_constraintBottom_toTopOf="@+id/tv_eval_calories"
        app:layout_constraintEnd_toEndOf="@+id/tv_eval_steps"
        app:layout_constraintTop_toBottomOf="@+id/tv_eval_steps" />

    <TextView
        android:id="@+id/tv_eval_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/family_body"
        android:text="TextView"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_eval_distance"
        app:layout_constraintTop_toBottomOf="@+id/tv_eval_distance" />
</androidx.constraintlayout.widget.ConstraintLayout>