<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_notepad"
        android:layout_width="344dp"
        android:layout_height="675dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notepad" />

    <ImageView
        android:id="@+id/iv_lines"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toTopOf="@+id/iv_notepad"
        app:srcCompat="@drawable/lines" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="245dp"
        android:layout_height="222dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="18dp"
        android:rotation="7"
        app:layout_constraintBottom_toBottomOf="@+id/tv_headline"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toTopOf="@+id/tv_headline"
        app:srcCompat="@drawable/line_blue" />

    <TextView
        android:id="@+id/tv_headline"
        android:layout_width="233dp"
        android:layout_height="99dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/family_headline"
        android:text="handbuch"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/darkgrey"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toTopOf="@+id/iv_notepad" />

    <ImageButton
        android:id="@+id/ib_x"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="32dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintTop_toTopOf="@+id/iv_notepad"
        app:srcCompat="@drawable/x" />

    <ImageButton
        android:id="@+id/ib_arrow"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginStart="38dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/ib_x"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toTopOf="@+id/ib_x"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/in_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv0"
        app:layout_constraintEnd_toEndOf="@+id/iv_notepad"
        app:layout_constraintTop_toTopOf="@+id/tv0"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:srcCompat="@drawable/dot_blue" />

    <TextView
        android:id="@+id/tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/family_body"
        android:text="Hauptbildschirm"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/large"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/in_next1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv1"
        app:layout_constraintEnd_toEndOf="@+id/in_next"
        app:layout_constraintTop_toTopOf="@+id/tv1"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/iv_notepad"
        app:layout_constraintTop_toTopOf="@+id/iv_lines"
        app:srcCompat="@drawable/dot_green" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/family_body"
        android:text="Fitness"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/large"
        app:layout_constraintBottom_toTopOf="@+id/tv2"
        app:layout_constraintStart_toStartOf="@+id/tv0"
        app:layout_constraintTop_toBottomOf="@+id/tv0" />

    <ImageView
        android:id="@+id/in_next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv2"
        app:layout_constraintEnd_toEndOf="@+id/in_next1"
        app:layout_constraintTop_toTopOf="@+id/tv2"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/dot_green" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/family_body"
        android:text="Einstellungen"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/large"
        app:layout_constraintBottom_toTopOf="@+id/tv3"
        app:layout_constraintStart_toStartOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <ImageView
        android:id="@+id/in_next3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv3"
        app:layout_constraintEnd_toEndOf="@+id/in_next2"
        app:layout_constraintTop_toTopOf="@+id/tv3"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:srcCompat="@drawable/dot_blue" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/family_body"
        android:text="Auswertungen"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/large"
        app:layout_constraintBottom_toTopOf="@+id/tv4"
        app:layout_constraintStart_toStartOf="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <ImageView
        android:id="@+id/in_next4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv4"
        app:layout_constraintEnd_toEndOf="@+id/in_next3"
        app:layout_constraintTop_toTopOf="@+id/tv4"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:srcCompat="@drawable/dot_green" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/family_body"
        android:text="Erfolge"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/large"
        app:layout_constraintBottom_toTopOf="@+id/tv5"
        app:layout_constraintStart_toStartOf="@+id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/tv3" />

    <ImageView
        android:id="@+id/in_next5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv5"
        app:layout_constraintEnd_toEndOf="@+id/in_next4"
        app:layout_constraintTop_toTopOf="@+id/tv5"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageView12"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:srcCompat="@drawable/dot_blue" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
